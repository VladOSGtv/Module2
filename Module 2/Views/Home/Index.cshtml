@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>Click the buttons below to make requests:</p>

<div>
    <button onclick="calculateEmployeePayment()">Calculate Employee Payment</button>
    <button onclick="calculateAverageSalary()">Calculate Average Salary</button>
    <button onclick="checkPaymentExceedsDoubleSalary()">Check Payment Exceeds Double Salary</button>
    <button onclick="generateSalaryReport()">Generate Salary Report</button>
    <button onclick="findEmployeesWithoutAllowance()">Find Employees Without Allowance</button>
    <button onclick="findUnusedAllowances()">Find Unused Allowances</button>
</div>

<script>
    function calculateEmployeePayment() {
        window.location.href = '@Url.Action("CalculateEmployeePayment", "Employee")';
    }

    function calculateAverageSalary() {
        window.location.href = '@Url.Action("CalculateAverageSalary", "Employee")';
    }

    function checkPaymentExceedsDoubleSalary() {
        window.location.href = '@Url.Action("CheckPaymentExceedsDoubleSalary", "Employee")';
    }

    function generateSalaryReport() {
        window.location.href = '@Url.Action("GenerateSalaryReport", "Employee")';
    }

    function findEmployeesWithoutAllowance() {
        window.location.href = '@Url.Action("FindEmployeesWithoutAllowance", "Employee")';
    }

    function findUnusedAllowances() {
        window.location.href = '@Url.Action("FindUnusedAllowances", "Allowance")';
    }
</script>